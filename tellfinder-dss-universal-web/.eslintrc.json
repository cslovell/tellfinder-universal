{
  "root": true,
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "blockBindings": true,
    "forOf": true,
    "modules": true,
    "generators": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "generator-star-spacing": 0,
    "new-cap": 1,
    "object-curly-spacing": 0,
    "object-shorthand": 1,
    "arrow-parens": 1,
    "no-await-in-loop": 1,
    "no-var": 2,
    "no-undef": 2
  },
  "globals": {
    "require": false,
    "exec": false,
    "describe": false,
    "fdescribe": false,
    "before": false,
    "beforeEach": false,
    "after": false,
    "it": false,
    "fit": false,
    "expect": false,
    "chai": false,
    "sinon": false
  },
  "env": {
    "browser": true,
    "es6": true
  }
}
